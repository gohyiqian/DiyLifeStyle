<%- include("../partials/header.ejs") %>
<body class="orange-section signup">
  <div class="card shadow-lg mb-3" style="height: 30rem; width:20rem;">
    <div class="card-body">
      <div class="text-center">
        <form class="form-signin" method="POST" action="/users/signup">
          <div>
            <img class="mt-3 mb-3" src="/images/small_logo.png" alt="" width="80" height="80">
            <h1 class="h3 mb-5 font-weight-normal">Join us for Free!</h1>
          </div>
          <div>
            <label for="username" class="sr-only"></label>
            <input type="text" name="username" class="form-control" placeholder="Create Username">
          </div>
          <div>
            <label for="password" class="sr-only"></label>
            <input type="password" name="password" class="form-control" placeholder="Create Password" >
          </div>
          <div class="checkbox mb-4">
            <label>
              <input type="checkbox" value="remember-me"> Remember me
            </label>
          </div>
          <button class="btn btn-lg btn-warning btn-block" type="submit" value="Sign up">Sign Up</button>
          <p class="mt-3 mb-3 text-muted">©gohyiqian 2021</p>
        </form>
      </div>
    </div>
    <footer class="text-muted py-5">
      <div class="container py-2">
        <i class="social-icon fab fa-facebook-f"></i>
        <i class="social-icon fab fa-twitter"></i>
        <i class="social-icon fab fa-instagram"></i>
        <i class="social-icon fas fa-envelope"></i>
        <p>© Copyright 2021 - diyLifeStyle </p>
      </div>
    </footer>
  </div>
  <script type="text/javascript" src="/navbar.js"></script>
</body>
</html>
